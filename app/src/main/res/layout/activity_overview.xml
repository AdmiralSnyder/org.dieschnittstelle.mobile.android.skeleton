<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.dieschnittstelle.mobile.android.skeleton.pages.TodoOverviewActivity">

    <TextView
        android:id="@+id/welcomeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/OverviewHeading"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ListView
        app:layout_constraintTop_toBottomOf="@id/welcomeTV"
        android:id="@+id/todoLV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/buttonAdd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/baseline_add_white_24dp"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/add_todo_item" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/buttonClearLocalDb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/buttonAdd"
        app:srcCompat="@drawable/baseline_clear_white_24dp"
        android:layout_margin="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:contentDescription="@string/recreate_local_db" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/buttonSyncData"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/buttonClearLocalDb"
        app:srcCompat="@drawable/baseline_sync_white_24dp"
        android:layout_margin="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:contentDescription="@string/sync_data" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/buttonUpsyncData"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/buttonSyncData"
        app:srcCompat="@drawable/baseline_upsync_white_24dp"
        android:layout_margin="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:contentDescription="@string/upsync_data" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/buttonDownsyncData"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/buttonUpsyncData"
        app:srcCompat="@drawable/baseline_downsync_white_24dp"
        android:layout_margin="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:contentDescription="@string/downsync_data" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/buttonClearOnlineDb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/buttonDownsyncData"
        app:srcCompat="@drawable/baseline_clearonline_white_24dp"
        android:layout_margin="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:contentDescription="@string/sync_data" />
</androidx.constraintlayout.widget.ConstraintLayout>